@{
    ViewData["Title"] = "Login";
}


<form asp-controller="Login" asp-action="Logar" method="post" class="w-50 p-5 mx-auto mt-5 shadow rounded d-flex flex-column align-items-center gap-4">
    <h2>Bem Vindo</h2>
    <div class="w-100">
        <label class="form-label">Email</label>
        <input class="form-control" type="email" name="email" required value="" />
    </div>
    <div class="w-100">
        <label class="form-label">Senha</label>
        <input class="form-control" type="password" name="senha" required value="" />

    </div>

    <button class="btn btn-primary px-5" type="submit">Entrar</button>
    
</form>

@if (TempData["Mensagem"] != null)
{
    <p class="text-center mt-5 text-danger">@TempData["Mensagem"]</p>
}